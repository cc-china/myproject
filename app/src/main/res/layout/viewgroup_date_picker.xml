<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/date_picker_white"
    android:orientation="horizontal">

    <com.my_project.test_custom_date_picker.view.date.YearPicker
        android:id="@+id/yearPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />

    <com.my_project.test_custom_date_picker.view.date.MonthPicker
        android:id="@+id/monthPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />

    <com.my_project.test_custom_date_picker.view.date.DayPicker
        android:id="@+id/dayPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2" />
</LinearLayout>